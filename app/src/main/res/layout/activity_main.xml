<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Companion - Just for U"
            android:background="#FFC107"
            android:padding="16dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Name Input -->
        <EditText
            android:id="@+id/userNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Name"
            android:layout_marginTop="16dp" />

        <!-- Indoor Activity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indoor Activity"
            android:layout_marginTop="16dp" />
        <Spinner
            android:id="@+id/indoorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Outdoor Activity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outdoor Activity"
            android:layout_marginTop="16dp" />
        <Spinner
            android:id="@+id/outdoorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Breakfast Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast Time"
            android:layout_marginTop="16dp" />
        <TimePicker
            android:id="@+id/breakfastTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />

        <!-- Lunch Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch Time"
            android:layout_marginTop="16dp" />
        <TimePicker
            android:id="@+id/lunchTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />

        <!-- Dinner Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner Time"
            android:layout_marginTop="16dp" />
        <TimePicker
            android:id="@+id/dinnerTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />

        <!-- Breakfast Meal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast Meal"
            android:layout_marginTop="16dp" />
        <Spinner
            android:id="@+id/breakfastSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Lunch Meal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch Meal"
            android:layout_marginTop="16dp" />
        <Spinner
            android:id="@+id/lunchSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Dinner Meal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner Meal"
            android:layout_marginTop="16dp" />
        <Spinner
            android:id="@+id/dinnerSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="32dp" />
    </LinearLayout>
</ScrollView>
