<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title Section -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Travel Companion - Just For U"
            android:background="#6200EE"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Name"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:layout_marginBottom="16dp" />

        <!-- Indoor/Outdoor Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferred Activity"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/indoorOutdoorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Preferred Cuisine -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferred Cuisine Type"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/cuisineTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Preferred Rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferred Rating (0-5)"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/ratingSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/ratingValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 0"
            android:layout_marginBottom="16dp" />

        <!-- Average Cost -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Cost (>= 0.0)"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/avgCostEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Average Cost"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Maximum Distance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Distance (>= 0)"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/maxDistanceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maximum Distance"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Preferred Ambience -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferred Ambience (0-5)"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/ambienceSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/ambienceValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambience: 0"
            android:layout_marginBottom="16dp" />

        <!-- Meal Times -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Times"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast Time"
            android:layout_marginTop="8dp" />

        <TimePicker
            android:id="@+id/breakfastTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:timePickerMode="spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch Time"
            android:layout_marginTop="8dp" />

        <TimePicker
            android:id="@+id/lunchTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:timePickerMode="spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner Time"
            android:layout_marginTop="8dp" />

        <TimePicker
            android:id="@+id/dinnerTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:timePickerMode="spinner" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>