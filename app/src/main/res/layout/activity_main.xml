<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle"
        android:dividerPadding="16dp">

        <!-- Indoor Activity Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Indoor Activity"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/indoorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Outdoor Activity Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Outdoor Activity"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/outdoorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <!-- Meal Time Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Meal Times"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/breakfastTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Breakfast Time (e.g., 8:00 AM)"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/lunchTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Lunch Time (e.g., 12:00 PM)"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/dinnerTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Dinner Time (e.g., 7:00 PM)"
            android:layout_marginBottom="32dp" />

        <!-- Meal Selection Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Meals"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast" />

        <Spinner
            android:id="@+id/breakfastSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch" />

        <Spinner
            android:id="@+id/lunchSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner" />

        <Spinner
            android:id="@+id/dinnerSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
