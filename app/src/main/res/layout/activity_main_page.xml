<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainPageActivity">

    <!-- Greeting based on time -->
    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#333"
        android:text="Good Morning, User!" />

    <!-- Weather information -->
    <TextView
        android:id="@+id/weatherTextView"
        android:layout_below="@id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather: Sunny, 25Â°C"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="#666" />

    <!-- RecyclerView for Recommendations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_below="@id/weatherTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_above="@+id/refreshButton"
        tools:listitem="@layout/recommendation_item" />

    <!-- Refresh Button for demo purpose -->
    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Refresh Recommendations" />
</RelativeLayout>
