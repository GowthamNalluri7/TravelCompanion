<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Preferences"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Display Indoor Activity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indoor Activity:"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/displayIndoorActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Display Outdoor Activity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outdoor Activity:"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/displayOutdoorActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Display Meal Times and Meals -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Times"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/displayBreakfastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/displayLunchTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/displayDinnerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner: "
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Preferences"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/displayBreakfastMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast Meal: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/displayLunchMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch Meal: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/displayDinnerMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner Meal: "
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Main"
            android:layout_gravity="center_horizontal"
            android:onClick="finish" />
    </LinearLayout>
</ScrollView>
