<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Fixed Location Display -->
        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Plateau Mont-Royal"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="#000" />


        <TextView
            android:id="@+id/weatherConditionsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather Conditions: Sunny"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:textColor="#666" />

        <!-- Activity Suggestions -->
        <TextView
            android:id="@+id/activityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- Activity Suggestions --"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000" />

        <!-- Restaurant Suggestions -->
        <TextView
            android:id="@+id/restaurantTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- Restaurant Suggestions --"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000" />

        <!-- Refresh Button -->
        <Button
            android:id="@+id/refreshButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh Suggestions"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
